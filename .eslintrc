{
    "rules": {
        "semi": ["error", "always"],
        "prefer-const": "error",
        "no-unused-vars": "error",
        "unused-imports/no-unused-imports": "error",
        "unused-imports/no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "varsIgnorePattern": "^_",
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ]
    },
    "plugins": ["unused-imports"]
}